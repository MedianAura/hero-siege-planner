{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@root": [
        "./"
      ],
      "@src": [
        "./src/"
      ],
      "@core": [
        "./src/core/"
      ],
      "@backend": [
        "./src/backend/"
      ],
      "@frontend": [
        "./src/frontend/"
      ]
    }
  }
}
