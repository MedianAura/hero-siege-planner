{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "jsx": "preserve",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "outDir": ".out/backend",
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "./*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@backend/*": [
        "src/backend/*"
      ],
      "@frontend/*": [
        "src/frontend/*"
      ]
    }
  },
  "include": ["src/backend/**/*.ts"]
}
