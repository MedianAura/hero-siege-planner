  "main": "main.ts",
  "scripts": {
    "build:backend": "npm run clean:backend && cross-env NODE_ENV=production rollup -c config/backend.config.js",
    "build:crawler": "npm run clean:crawler && cross-env NODE_ENV=production rollup -c config/crawler.config.js",
    "build:frontend": "npm run clean:frontend && cross-env NODE_ENV=production rollup -c config/frontend.config.js",
    "clean:backend": "rimraf .out/backend",
    "clean:crawler": "rimraf .out/crawler",
    "clean:frontend": "rimraf .out/frontend",
    "commit": "cz",
    "run:crawler": "node .out/crawler/main.js",
    "serve:backend": "nodemon --config config/backend.nodemon.json .out/backend/main.js",
    "serve:crawler": "nodemon --config config/crawler.nodemon.json .out/crawler/main.js",
    "serve:frontend": "browser-sync start -c browsersync.js",
    "watch:backend": "npm run clean:backend && rollup -c config/backend.config.js -w",
    "watch:crawler": "npm run clean:crawler && rollup -c config/crawler.config.js -w",
    "watch:frontend": "npm run clean:frontend && rollup -c config/frontend.config.js -w"
  },
